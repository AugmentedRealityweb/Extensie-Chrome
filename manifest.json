{
  "manifest_version": 3,
  "name": "Color Trail Extension",
  "version": "1.0",
  "description": "Shows a colorful trail behind the cursor when the button is clicked.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
