{
  "manifest_version": 3,
  "name": "Egg Game Extension",
  "version": "1.0",
  "description": "Click the egg to reduce the score and try to reach 0 to break the egg.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
